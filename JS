    <title>LABORATORIO 3</title>
</head>
<body>
    <script>
        let a=10;
        let b=2;

        function sumar (a,b){
            return a+b;
        }
        function restar (a,b){
            return a-b;
        }
        function multi (a,b){
            return a*b;
        }
        function divi (a,b){
            return a/b;
        }
        function salir (a,b){
            document.write("has terminado");
        }
        function realizarOperacion (n1,n2,operacion){
            switch(operacion){
                case 'sumar':
                    return sumar (n1,n2);
                case 'restar':
                    return restar (n1,n2);
                case 'multi':
                    return multi (n1,n2);
                case 'divi':
                    return divi (n1,n2);
                case 'salir':
                    document.write("Has terminado!.....");       
            }
        }
        
        let numero1=parseFloat (prompt("Ingrese su primer numero es: "));
        let numero2=parseFloat (prompt("Ingrese su segundo numero es: "));
        let operacion=prompt("Ingrese la operacion(sumar,restar,multi,divi,salir)");   
        
        let resultado=realizarOperacion(numero1,numero2,operacion);
        
        document.write("El resultado es: ",+resultado);
        console.log("El resultado es: ",+resultado);

    </script>
    
</body>
